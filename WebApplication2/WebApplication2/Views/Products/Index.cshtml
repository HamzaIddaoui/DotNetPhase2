@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css"
      rel="stylesheet" />
<!-- MDB -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
<style>
    .card:hover{
        transform: scale(1.1);
        transition:transform opacity 0.3s ease-in-out;
        background-image:none !important;
    }

    .card:hover .card-body{
        display:flex !important;
        justify-content: space-around;
    }
    button {
        height: 35px;
    }
</style>

<div class="row d-flex justify-content-end">
    <div class="col-1">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-square-plus"></i>
        </a>
    </div>
</div>
<div class="container bg-light mt-5">
    <div class="row d-flex justify-content-between">

        @foreach (var item in Model)
        {
            <div class="card col-3" style="background-image:url(@item.imagePath); background-size:cover; background-repeat:no-repeat; background-position-x:center; background-position-y:center;height:120px">
                <div class="card-body mt-3" style="display:none">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success col-2 d-flex align-content-center justify-content-center" style="height:35px">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning col-2 d-flex align-content-center justify-content-center" style="height:35px">
                        <i class="fas fa-info"></i>
                     </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger col-2 d-flex align-content-center justify-content-center" style="height:35px">
                        <i class="fas fa-trash"></i>
                     </a>
                    @* <a asp-action="Create" asp-controller="CartItems" asp-route-Product_Id=@item.Id asp-route-Cart_Id="1" class="btn btn-primary col-2 d-flex align-content-center justify-content-center" style="height:35px">
                        <i class="fa-solid fa-cart-plus"></i>
                    </a> *@
                    <form class="col-2" asp-action="Create" asp-controller="CartItems">
                        <input name="Product_Id" type="text" value=@item.Id hidden/>
                        <input name="Cart_Id" type="text" value="1" hidden/>
                        <button type="submit" class="col-2 btn btn-primary d-flex align-content-center justify-content-center">
                            <i class="fa-solid fa-cart-plus"></i>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

</table>

